{# IMAGE WITH CONTENT BLOCK #}
<h3>Basic version: 2/3 image</h3>
<div class="element--img--block element--img--block--image-2-3">
	<div class="image-wrapper">
		<div class="column-image" style="background-image:url({{image}})"></div>
		<div class="column-body block">
			<span class="block--title">{{title}}</span>
			<span class="block--desc">{{desc}}</span>
			<span class="block--divider"></span>
		</div>
	</div>
</div>

<h3>Variation 1: 3/2 image</h3>
<div class="element--img--block element--img--block--image-3-2">
	<div class="image-wrapper">
